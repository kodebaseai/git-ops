{
  "name": "@kodebase/git-ops",
  "version": "0.8.0",
  "description": "Git platform abstraction for GitHub, GitLab, and Bitbucket operations",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "lint": "biome lint .",
    "lint:package": "publint",
    "lint:types": "attw --pack . --profile esm-only",
    "format": "biome format .",
    "test": "vitest run",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:all": "pnpm test && pnpm test:e2e",
    "test:coverage": "vitest run --coverage",
    "test:mutation": "PATH=\"$PATH:../../node_modules/.pnpm/node_modules/.bin\" stryker run",
    "test:mutation:force": "PATH=\"$PATH:../../node_modules/.pnpm/node_modules/.bin\" stryker run --force",
    "test:contracts": "vitest run --coverage.enabled=false src/adapters/__contracts__/*.contract.test.ts src/hooks/core/__contracts__/*.contract.test.ts src/hooks/detection/__contracts__/*.contract.test.ts",
    "prepack": "pnpm lint:package"
  },
  "dependencies": {
    "@kodebase/artifacts": "workspace:*",
    "@kodebase/config": "workspace:*",
    "@kodebase/core": "workspace:*"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@fast-check/vitest": "0.2.3",
    "@kodebase/test-utils": "workspace:*",
    "@kodebase/typescript-config": "workspace:*",
    "@stryker-mutator/core": "^9.3.0",
    "@stryker-mutator/vitest-runner": "^9.3.0",
    "@types/node": "^22.19.0",
    "@vitest/coverage-istanbul": "^4.0.7",
    "@vitest/coverage-v8": "^4.0.7",
    "fast-check": "4.3.0",
    "memfs": "^4.50.0",
    "publint": "^0.3.15",
    "vitest": "^4.0.7",
    "zod": "^4.1.12"
  }
}
