{
  "extends": "@kodebase/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"],
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@kodebase/git-ops": ["./src"],
      "@kodebase/test-utils": ["../test-utils/src"],
      "@kodebase/test-utils/*": ["../test-utils/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.integration.test.ts",
    "test"
  ]
}
